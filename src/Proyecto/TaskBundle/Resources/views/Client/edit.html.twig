{% extends '::principal.html.twig' %}
{% block js %}
    <script type="text/javascript" src="{{ asset('bundles/tarea/js/jquery-1.9.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/tarea/js/bootstrap.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/tarea/js/collapse.js') }}"></script>
    
{% endblock %}
{% block body %}
    <div class='container'>
        <div class='col-xs-12 col-sm-10 col-md-6 col-sm-offset-2 col-md-offset-2'>
            <div class='panel panel-primary'>
                <div class="panel-heading">
                    <div class="panel-title"><strong>{{ "Ab√§ndern Client"|trans }}</strong></div>
                    <div style="float:right; font-size: 80%; position: relative; top:-10px"></div>
                </div>
                {% if errors|length > 0 %}
                    {% for error in errors %}
                    <div class='alert alert-danger'>
                        <ul class="error_list">                          
                            <li><p class="text-danger">{{ error|trans }}</p></li>                           
                        </ul>
                    </div>
                    {% endfor %}
                {% endif %}
                <div class='panel-body'>
                    <form class='form-horizontal' action='{{ path("clientEdit", { 'id': entity.id }) }}' method='post' {{ form_enctype(edit_form) }}>
                        <div class='form-group'>
                            {{ form_widget(edit_form.name) }}
                        </div>
                        <hr>
                        <div class="col-md-offset-3">
                            <input class='btn btn-primary text-center' type='submit' value={{ 'Speichern'|trans }}>
                            <a class="btn btn-info" href="{{ path("taskList") }}">{{ 'Abbrechen'|trans }}</a>
                        </div>
                        {{ form_rest(edit_form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
